<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_my_recipes_specific_recipe_scene"
    android:background="#ffffff"
    >


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRating5"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:elevation="40dp"
        app:cardBackgroundColor="#2dba73"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="40dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="60dp">

        <TextView
            android:id="@+id/textRating5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="TextView"
            android:textColor="#000000" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRating4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:elevation="40dp"
        app:cardBackgroundColor="#2dba73"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="40dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="60dp">

        <TextView
            android:id="@+id/textRating4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="TextView"
            android:textColor="#000000" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddToMyRecipes"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="324dp"
        android:backgroundTint="@color/EzGreen"
        android:elevation="6dp"
        android:src="@drawable/icons8_plus_48"
        app:fabCustomSize="45.5dp"
        app:layout_constraintEnd_toEndOf="@+id/vpRecipe"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpRecipe"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageRecipeImage">


    </androidx.viewpager2.widget.ViewPager2>

    <ImageView
        android:id="@+id/imageRecipeTitleShadow"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/recipe_title_shadow"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabRecipe"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="304dp"


        android:background="@drawable/tab_background"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".6"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabPaddingEnd="1dp"
        app:tabPaddingStart="-.5dp"
        app:tabRippleColor="@null">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday" />
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/txtRecipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:elevation="5dp"
        android:text="Fried Chicken"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageRecipeImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/recycler_image_shadow"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent=".9"
        app:layout_constraintStart_toStartOf="@+id/imageRecipeBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageRecipeBackground"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/recycler_image_shadow"
        android:elevation="1dp"
        app:layout_constraintHeight_percent=".9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRating3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:elevation="40dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#2dba73"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="40dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textRating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="TextView" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRating2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:elevation="40dp"
        app:strokeWidth="1dp"
        app:strokeColor="#000000"
        app:cardBackgroundColor="#2dba73"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="40dp"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="11dp">

        <TextView
            android:id="@+id/textRating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="TextView" />
    </com.google.android.material.card.MaterialCardView>

    <RatingBar
        android:id="@+id/rbRecipeIndicator"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:elevation="20dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintStart_toStartOf="@+id/txtRecipeTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtRecipeTitle" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRating1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:elevation="40dp"
        app:cardBackgroundColor="#2dba73"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="40dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textRating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="TextView"
            android:textColor="#000000" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.motion.widget.MotionLayout>