<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        android:id="@+id/recipeTransition">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:moveWhenScrollAtTop="true"
            motion:maxAcceleration="800"


            motion:touchAnchorSide="start"
            motion:touchAnchorId="@id/vpRecipe"
            />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent=".9"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintTop_toBottomOf="@+id/imageRecipe"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/rvDirectionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/textView8"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageRecipeBackground"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tabRecipe"
            android:elevation="4dp"
            motion:layout_constraintWidth_percent=".6"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginStart="80dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="312dp"
            android:layout_marginLeft="80dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/imageRecipeImage"
            android:layout_width="match_parent"
            android:id="@+id/vpRecipe"
            android:elevation="6dp"
            motion:layout_constraintHorizontal_bias="1.0" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView2" />
            android:id="@+id/imageView2" />
        <Constraint
            android:id="@+id/imageRecipeTitleShadow"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/btnDeleteFromMyRecipes"
            android:elevation="10dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="356dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/txtRecipeTitle"
            android:elevation="10dp"
            android:layout_width="310dp"
            android:layout_height="109dp"
            android:visibility="visible"
            android:layout_marginStart="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" />
        <Constraint
            android:id="@+id/fragmentContainerView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintTop_toBottomOf="@+id/vpRecipe"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="176dp" />
        <Constraint
            android:elevation="6dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="356dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:id="@+id/btnAddToMyRecipes"
            android:layout_marginLeft="356dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/imageRecipeBackground" />
        <Constraint
            android:id="@+id/imageRecipeBackground"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:elevation="4dp"
            motion:layout_constraintWidth_percent=".6"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:id="@+id/tabRecipe"
            android:layout_marginTop="112dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/vpRecipe"
            motion:layout_constraintEnd_toEndOf="parent"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/imageRecipeImage"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imageRecipeTitleShadow"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/btnAddToMyRecipes"
            android:elevation="6dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="356dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/btnDeleteFromMyRecipes"
            android:elevation="10dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="356dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/txtRecipeTitle"
            android:elevation="10dp"
            android:layout_width="452dp"
            android:layout_height="71dp"
            android:visibility="visible"
            android:scaleX=".65"
            android:scaleY=".65"

            android:layout_marginStart="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:translationX="-23dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/SwipeDown" />
</MotionScene>